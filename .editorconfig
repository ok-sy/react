root = true

[*]
end_of_line = lf
charset = utf-8

[*.{json,js,jsx,ts,tsx}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120


[*.{yml,yaml,json}]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 200
